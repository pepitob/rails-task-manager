<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed ? "This task is complete" : "This task is not completed yet" %></p>

<%= link_to "Edit task", edit_task_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Back to list", tasks_path %>
